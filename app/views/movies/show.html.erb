<p style="color: green"><%= notice %></p>

<div class="card col-lg-6 col-md-6 col-sm-12 col-xs-12">
  <div class="card-body">
    <h5 class="card-title">Name Movie</h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @movie.name %></h6>
    
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
    <%= link_to "Edit this movie", edit_movie_path(@movie) , class:"btn btn-primary btn-sm m-1" %>
    <%= button_to "Destroy this movie", @movie, method: :delete, class:"btn btn-primary btn-sm m-1" %>
    <%= link_to "Back to movies", movies_path, class:"btn btn-primary btn-sm m-1" %>
    </div>
  </div>
</div>


